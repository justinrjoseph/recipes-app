<h1><%= @recipe.name %></h1>

<div class="row">
    
    <div class="col-md-4 pull-right">
        <%= gravatar_for @recipe.chef, size: 200 %>
        <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
    </div>
    
    <div class="col-md-8">
        <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: 'btn btn-success pull-right' %>
        <h3><%= @recipe.summary %></h3>
        
        <div class="well">
            <p><strong>Steps:</strong></p>
            <%= simple_format(@recipe.description) %>
        </div>
    </div>
    
</div>

<h5><%= link_to "Return to Recipes List", recipes_path, class: 'btn btn-small btn-warning' %></h5>