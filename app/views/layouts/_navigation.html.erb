<div class="container-fluid">
  <header>
    <nav class="navbar navbar-fixed-top navbar-default" role="navigation">
  
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "myRecipes", root_path, class: 'btn btn-lg btn-success', id: 'logo' %>
        </div>

        <div class="collapse navbar-collapse" id="main-nav-collapse">
          <ul class="nav navbar-nav navbar-right">
            <!--<li class="nav-item"><//%= link_to "Link 1", "#", class: 'btn btn-warning' %></li>-->
            <li class="nav-item dropdown">
              <%= link_to '#', class: 'btn btn-warning dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                Styles <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <% Style.all.each do |style| %>
                  <li><%= link_to style.name, style_path(style) %></li>
                <% end %>
                <% if logged_in? %>
                  <li class="divider"></li>
                  <li><%= link_to "New Style", new_style_path %></li>
                <% end %>
              </ul>
            </li>
            <!--<li class="nav-item"><//%= link_to "Link 2", "#", class: 'btn btn-warning' %></li>-->
            <li class="nav-item dropdown">
              <%= link_to '#', class: 'btn btn-warning dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                Ingredients <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <% Ingredient.all.each do |ing| %>
                  <li><%= link_to ing.name, ingredient_path(ing) %></li>
                <% end %>
                <% if logged_in? %>
                  <li class="divider"></li>
                  <li><%= link_to "New Ingredient", new_ingredient_path %></li>
                <% end %>
              </ul>
            </li>
            <% if logged_in? %>
              <li class="nav-item"><%= link_to "Create Recipe", new_recipe_path, class: 'btn btn-warning' %></li>
              <li class="nav-item dropdown">
                <%= link_to '#', class: 'btn btn-success dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                  <%= current_user.chefname %> <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to "View Profile", chef_path(current_user) %></li>
                  <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Log out", logout_path %></li>
                </ul>
              </li>
          </ul>
            <% else %>
              <li class="nav-item"><%= link_to "Sign in", login_path, class: 'btn btn-success' %></li>
            <% end %>
        </div>
      </div>
    </nav>
  </header>
</div>