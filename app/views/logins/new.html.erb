<%= render 'shared/page_title', title: 'Please log in' %>

<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <%= form_tag '/login' do %>
        
            <div class="form-group">
                <%= label_tag :email %>
                <%= text_field_tag :email, nil, options = { autofocus: true, placeholder: 'Email', class: 'form-control' } %>
            </div>
            
            <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password,  nil , options = { placeholder: 'Password', class: 'form-control' } %>
            </div>
            
            <%= submit_tag 'Log in', class: 'btn btn-success' %>
        
        <% end %>        
    </div>
</div>
